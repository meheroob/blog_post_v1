<%- include("partials/header") -%>




<h1>Compose</h1>



<form method="post" action="/compose">
    <div class="form-group">
      <label for="exampleFormControlInput1">Title</label>
      <input type="text" class="form-control" id="exampleFormControlInput1" name="newJournalTitle" autocomplete="off" required>
    </div>


    <div class="form-group">
      <label for="exampleFormControlTextarea1">Post</label>
      <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="newJournalEntry" required>
      </textarea>
    </div>

    <button type="submit" class="btn btn-primary" name="publishButton">Publish</button>
  </form>



<%- include("partials/footer") -%>